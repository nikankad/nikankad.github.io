---
import { NAVIGATION } from "../../constants/navigation";
const pathname = new URL(Astro.request.url).pathname;
const showFish = pathname !== "/";

const isActive = (path: string) => {
  if (path === "/") return pathname === "/";
  return pathname.startsWith(path);
};
---

<nav>
  <div class="nav-links">
    {
      NAVIGATION.map(({ name, path }) => (
        <a href={path} class={isActive(path) ? "active" : ""}>
          {name}
        </a>
      ))
    }
  </div>
  {showFish && (
    <div class="nav-right">
      <img src="/images/companies/low/fish.jpg" alt="Fish" class="nav-fish" loading="lazy" decoding="async" fetchpriority="low" />
    </div>
  )}
</nav>

<style>
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
  }

  .nav-links {
    display: flex;
    gap: 1.5rem;
  }

  .nav-links a {
    color: var(--text-muted);
    text-decoration: none;
    font-size: var(--text-sm);
    transition: color var(--transition-base);
    position: relative;
  }

  a {
    color: var(--text-muted);
    text-decoration: none;
    font-size: var(--text-sm);
    transition: color var(--transition-base);
    position: relative;
  }

  a:hover {
    color: var(--color-text);
  }

  a.active {
    color: var(--color-text) !important;
  }

  a.active::after {
    content: "";
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 100%;
    height: 1px;
    background: var(--text-muted);
  }

  .nav-right {
    display: flex;
    align-items: center;
    margin-left: auto;
  }

  .nav-fish {
    width: 2rem;
    height: 2rem;
    object-fit: cover;
    border-radius: 50%;
  }
</style>
